<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE xml>

<Context>

    <!-- mariadb(mysql) database pooling by tomcat via jndi resource
         -->

  <Resource name="jdbc/crowdfundDB" auth="Container" type="javax.sql.DataSource"
               maxTotal="20" maxIdle="5" maxWaitMillis="10000"
               username="mysql" password="mysql" driverClassName="org.mariadb.jdbc.Driver"
               url="jdbc:mariadb://localhost:3306/crowdfund"/>

</Context>
